<!-- res/drawable/border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <stroke
        android:width="2dp"
        android:color="#FFFFFF"/> <!-- Border color and width -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"/> <!-- Padding inside the border -->
    <corners android:radius="10dp"/> <!-- Corner radius, if you want rounded corners -->
</shape>
